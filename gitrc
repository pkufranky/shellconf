#
# franky's bash completion support for core Git alias.
#
alias gtad='git add'
alias gtap='git apply'
alias gtbi='git bisect'
alias gtbr='git branch'
alias gtci='git commit'
alias gtcf='git config'
alias gtcl='git clone'
alias gtco='git checkout'
alias gtcp='git cherry-pick'
alias gtcr='git cherry'
alias gtde='git describe'
alias gtdi='git diff'
alias gtdis='git diff --stat'
alias gtfe='git fetch'
alias gtfp='git format-patch'
alias gtgc='git gc'
alias gtlg='git log'
alias gtlg1='git log --pretty=oneline'
alias gtlgp='git log -p'
alias gtlgs='git log --stat'
alias gtlgfp='git log --first-parent'
alias gtlglr='git log --pretty=oneline --left-right'

alias gtmg='git merge'
alias gtmv='git mv'
alias gtps='git push'
alias gtpl='git pull'
alias gtrb='git rebase'
alias gtrl='git reflog'
alias gtrm='git rm'
alias gtrs='git reset'
alias gtrmt='git remote'
alias gtsbr='git show-branch'
alias gtsh='git show'
alias gtslg='git shortlog'
alias gtsm='git submodule'
alias gtss='git stash'
alias gtst='git status'
alias gttg='git tag'
alias gtnw='git new-workdir'


# below is done automatically, this file is come from contrib/completion of git source tree
# . /etc/bash_completion.d/git

complete -o default -o nospace -F _git_am gtam
complete -o default -o nospace -F _git_apply gtap
complete -o default -o nospace -F _git_bisect gtbi
complete -o default -o nospace -F _git_branch gtbr
complete -o default -o nospace -F _git_bundle gtbd
complete -o default -o nospace -F _git_checkout gtco
complete -o default -o nospace -F _git_cherry gtcr
complete -o default -o nospace -F _git_cherry_pick gtcp
complete -o default -o nospace -F _git_commit gtci
complete -o default -o nospace -F _git_describe gtde
complete -o default -o nospace -F _git_diff gtdi
complete -o default -o nospace -F _git_fetch gtfe
complete -o default -o nospace -F _git_format_patch gtfp
complete -o default -o nospace -F _git_gc gtgc
complete -o default -o nospace -F _git_log gtlg
complete -o default -o nospace -F _git_log gtlg1
complete -o default -o nospace -F _git_log gtlgp
complete -o default -o nospace -F _git_merge gtmg
complete -o default -o nospace -F _git_pull gtpl
complete -o default -o nospace -F _git_push gtps
complete -o default -o nospace -F _git_config gtcf
complete -o default -o nospace -F _git_remote gtrmt
complete -o default -o nospace -F _git_reset gtrs
complete -o default -o nospace -F _git_shortlog gtslg
complete -o default -o nospace -F _git_show gtsh
complete -o default -o nospace -F _git_stash gsss
complete -o default -o nospace -F _git_submodule gtsm
complete -o default -o nospace -F _git_log gtsbr
complete -o default -o nospace -F _git_tag gttg

. ~/.rc/stgit-completion.bash
