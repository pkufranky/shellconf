#
# franky's bash completion support for core Git alias.
#
alias gtad='git add'
alias gtap='git apply'
alias gtam='git am'
alias gtbi='git bisect'
alias gtbr='git branch'
alias gtci='git commit'
alias gtcf='git config'
alias gtcl='git clone'
alias gtco='git checkout'
alias gtcp='git cherry-pick'
alias gtcr='git cherry'
alias gtde='git describe'
alias gtdi='git diff'
alias gtdis='git diff --stat'
alias gtfe='git fetch'
alias gtfp='git format-patch'
alias gtfb='git filter-branch'
alias gtgc='git gc'
alias gtlc='git locate'
alias gtlg='git log'
alias gtlg1='git log --pretty=oneline'
alias gtlgp='git log -p'
alias gtlgs='git log --stat'
alias gtlgfp='git log --first-parent'
alias gtlglr='git log --pretty=oneline --left-right'

alias gtmg='git merge'
alias gtmt='git mergetool'
alias gtmv='git mv'
alias gtps='git push'
alias gtpl='git pull'
alias gtplr='git pull --rebase'
alias gtrb='git rebase'
alias gtrbw='git rebase --whitespace=fix'
alias gtrl='git reflog'
alias gtrm='git rm'
alias gtrs='git reset'
alias gtrmt='git remote'
alias gtsbr='git show-branch'
alias gtsh='git show'
alias gtslg='git shortlog'
alias gtsm='git submodule'
alias gtss='git stash'
alias gtst='git status'
alias gttg='git tag'
alias gtnw='git new-workdir'


# below is done automatically, this file is come from contrib/completion of git source tree
# . /etc/bash_completion.d/git
. ~/.rc/git-completion.bash

__git_complete gtlg _git_log
__git_complete gtam _git_am
__git_complete gtap _git_apply
__git_complete gtbi _git_bisect
__git_complete gtbr _git_branch
__git_complete gtbd _git_bundle
__git_complete gtco _git_checkout
__git_complete gtcr _git_cherry
__git_complete gtcp _git_cherry_pick
__git_complete gtci _git_commit
__git_complete gtde _git_describe
__git_complete gtdi _git_diff
__git_complete gtfe _git_fetch
__git_complete gtfp _git_format_patch
__git_complete gtgc _git_gc
__git_complete gtlg _git_log
__git_complete gtlg1 _git_log
__git_complete gtlgp _git_log
__git_complete gtmg _git_merge
__git_complete gtpl _git_pull
__git_complete gtplr _git_pull
__git_complete gtps _git_push
__git_complete gtcf _git_config
__git_complete gtrmt _git_remote
__git_complete gtrs _git_reset
__git_complete gtslg _git_shortlog
__git_complete gtsh _git_show
__git_complete gtsh gtss _git_stash
__git_complete gtsm _git_submodule
__git_complete gtsbr _git_show_branch
__git_complete gttg _git_tag

